{
  "compilerOptions": {
    "alwaysStrict": true,
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__mocks__"]
}
