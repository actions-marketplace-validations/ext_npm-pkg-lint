{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "noEmit": true,
    "sourceMap": true,

    "module": "esnext",
    "moduleResolution": "bundler",

    "declaration": true,

    "isolatedModules": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__mocks__"]
}
