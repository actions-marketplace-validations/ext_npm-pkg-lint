{
  "name": "npm-pkg-lint",
  "version": "1.0.3",
  "description": "Lint NPM package tarball and metadata",
  "keywords": [
    "lint",
    "npm"
  ],
  "homepage": "https://github.com/ext/npm-pkg-lint",
  "bugs": {
    "url": "https://github.com/ext/npm-pkg-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ext/npm-pkg-lint.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "npm-pkg-lint": "index.js"
  },
  "files": [
    "index.js",
    "dist",
    "!*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@html-validate"
    ]
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "prettier": "@html-validate/prettier-config",
  "jest": {
    "preset": "@html-validate/jest-config"
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "eslint": "^7.13.0",
    "tar": "^6.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@html-validate/commitlint-config": "1.0.3",
    "@html-validate/eslint-config": "^2.0.0",
    "@html-validate/jest-config": "1.0.31",
    "@html-validate/prettier-config": "1.1.0",
    "@html-validate/semantic-release-config": "^1.1.0",
    "@types/argparse": "^2.0.2",
    "@types/jest": "26.0.15",
    "@types/node": "11.15.35",
    "@types/tar": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "semantic-release": "17.2.2",
    "ts-jest": "26.4.3",
    "typescript": "4.0.5"
  },
  "engines": {
    "node": ">= 12.0"
  },
  "renovate": {
    "extends": [
      "@html-validate"
    ]
  }
}
