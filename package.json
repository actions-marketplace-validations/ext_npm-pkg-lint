{
  "name": "npm-pkg-lint",
  "version": "1.3.0",
  "description": "Opinionated linter for NPM package tarball and package.json metadata",
  "keywords": [
    "lint",
    "npm"
  ],
  "homepage": "https://github.com/ext/npm-pkg-lint",
  "bugs": {
    "url": "https://github.com/ext/npm-pkg-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ext/npm-pkg-lint.git"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "main": "dist/index.js",
  "bin": "bin/index.js",
  "files": [
    "bin",
    "dist",
    "!**/*.d.ts",
    "!**/*.spec.js"
  ],
  "scripts": {
    "build": "tsc",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepare": "husky install",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "self-test": "node bin/index.js",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "commitlint": {
    "extends": [
      "@html-validate"
    ]
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "prettier": "@html-validate/prettier-config",
  "jest": {
    "preset": "@html-validate/jest-config",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist",
      "tests/fixtures"
    ]
  },
  "dependencies": {
    "@html-validate/stylish": "^1.0.0",
    "argparse": "^2.0.1",
    "find-up": "^5.0.0",
    "semver": "^7.3.2",
    "tar": "^6.0.5",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@html-validate/commitlint-config": "1.3.1",
    "@html-validate/eslint-config": "4.1.0",
    "@html-validate/eslint-config-jest": "4.0.0",
    "@html-validate/eslint-config-typescript": "4.2.0",
    "@html-validate/jest-config": "1.2.9",
    "@html-validate/prettier-config": "1.1.0",
    "@html-validate/semantic-release-config": "1.2.12",
    "@types/argparse": "2.0.5",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.23",
    "@types/node": "12.20.12",
    "@types/semver": "7.3.5",
    "@types/tar": "4.0.4",
    "@types/tmp": "0.2.0",
    "eslint": "7.25.0",
    "execa": "5.0.0",
    "glob": "7.1.7",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "semantic-release": "17.4.2",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">= 12.0"
  },
  "renovate": {
    "extends": [
      "@html-validate"
    ]
  }
}
