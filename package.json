{
  "name": "npm-pkg-lint",
  "version": "1.1.0",
  "description": "Lint NPM package tarball and metadata",
  "keywords": [
    "lint",
    "npm"
  ],
  "homepage": "https://github.com/ext/npm-pkg-lint",
  "bugs": {
    "url": "https://github.com/ext/npm-pkg-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ext/npm-pkg-lint.git"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "main": "dist/index.js",
  "bin": "bin/index.js",
  "files": [
    "bin",
    "dist",
    "!**/*.d.ts",
    "!**/*.spec.js"
  ],
  "scripts": {
    "build": "tsc",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "self-test": "node bin/index.js",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@html-validate"
    ]
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "prettier": "@html-validate/prettier-config",
  "jest": {
    "preset": "@html-validate/jest-config",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist",
      "tests/fixtures"
    ]
  },
  "dependencies": {
    "argparse": "^2.0.1",
    "eslint": "^7.13.0",
    "find-up": "^5.0.0",
    "tar": "^6.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@html-validate/commitlint-config": "1.1.1",
    "@html-validate/eslint-config": "2.1.1",
    "@html-validate/jest-config": "1.0.31",
    "@html-validate/prettier-config": "1.1.0",
    "@html-validate/semantic-release-config": "1.1.0",
    "@types/argparse": "2.0.2",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.15",
    "@types/node": "11.15.35",
    "@types/tar": "4.0.3",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "eslint-plugin-jest": "24.1.3",
    "execa": "4.1.0",
    "glob": "7.1.6",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "semantic-release": "17.2.2",
    "ts-jest": "26.4.4",
    "typescript": "4.0.5"
  },
  "engines": {
    "node": ">= 12.0"
  },
  "renovate": {
    "extends": [
      "@html-validate"
    ]
  }
}
